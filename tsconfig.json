{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./build",
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types", "./Typings"]
  },
  "exclude": ["node_modules", "custom"],
  "include": [
    "index.js",
    "app",
    "test",
    "storybook",
    "storybook-web",
    "babel.config.js",
    "jest.config.js",
    "metro.config.js",
    "Typings/*.d.ts"
  ]
}
